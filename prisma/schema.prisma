// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id
  name     String
  email    String     @unique
  password String
  Property Property[]
}

model Property {
  id         String    @id // Se você deseja gerar automaticamente IDs
  quartos    Int
  titulo     String
  tamanho    Int
  valor      Int
  cidade     String
  fotos      String[] // Um array de strings para URLs de fotos, opcional
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  created_at DateTime? @default(now()) // Data de criação, opcional
  tipo       String // Tipo de imóvel: 'casa' ou 'apartamento'
}
